<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/filter_options.xml -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white">

    <RadioButton
            android:id="@+id/radioOptionCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/twotone_directions_car_24"
            android:text=" Car" />

    <RadioButton
            android:id="@+id/radioOptionMotorbike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/twotone_directions_bike_24"
            android:text=" Motorbike" />

    <RadioButton
            android:id="@+id/radioOptionLorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/twotone_local_shipping_24"
            android:text=" Heavy Vehicle" />

    <!-- Add more radio buttons as needed -->

    <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm" />
</LinearLayout>